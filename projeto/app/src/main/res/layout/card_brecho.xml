<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/cardBrecho1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:layout_margin="6dp"
        android:background="@drawable/bg_cardbrecho">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_cardBrecho1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title_cardBrecho1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="brecho dona maria"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginStart="66dp"
            android:layout_alignParentTop="true"/>

        <RatingBar
            android:id="@+id/rating_cardBrecho1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_cardBrecho1"
            android:layout_marginStart="66dp"
            android:stepSize="0.5"
            style="@style/Widget.AppCompat.RatingBar.Small"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/description_cardBrecho1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rating_cardBrecho1"
            android:layout_marginStart="66dp"
            android:text="Roupas lindas bonitas e bem conservadas."
            android:textColor="@color/black"
            android:textSize="12sp"/>

<!--        <androidx.appcompat.widget.AppCompatImageView-->
<!--            android:id="@+id/favorite_cardBrecho"-->
<!--            android:layout_width="24dp"-->
<!--            android:layout_height="24dp"-->
<!--            android:layout_alignParentTop="true"-->
<!--            android:layout_alignParentEnd="true"-->
<!--            android:src="@drawable/ic_favarite"/>-->

    </RelativeLayout>

</LinearLayout>