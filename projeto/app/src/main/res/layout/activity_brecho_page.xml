    <ImageView
        android:id="@+id/imageView_BrechoPage"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/img_1"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TextView_Title_BrechoPage"/>

    <TextView
        android:id="@+id/TextView_Title_BrechoPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:text="Brecho dona maria"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="27sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/Label_Desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descrição:"
        android:textColor="@color/black"
        android:textStyle=""
        android:layout_marginTop="5dp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView_BrechoPage" />

    <TextView
        android:id="@+id/TextView_Descricao_BrechoPage"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:text="Roupas para homens e mulheres crianças e adultos"
        android:textSize="18sp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/Label_Desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/TextView_Horario_BrechoPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:text="Aberto  Das:"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/TextView_Descricao_BrechoPage"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/TextView_Horario_Das_BrechoPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:text="8:00"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/TextView_Descricao_BrechoPage"
        app:layout_constraintStart_toEndOf="@id/TextView_Horario_BrechoPage"
        />

    <TextView
        android:id="@+id/TextView_Horario__BrechoPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:text="as"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/TextView_Descricao_BrechoPage"
        app:layout_constraintStart_toEndOf="@id/TextView_Horario_Das_BrechoPage"
        />

    <TextView
        android:id="@+id/TextView_Horario_As_BrechoPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:text="18:00"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/TextView_Descricao_BrechoPage"
        app:layout_constraintStart_toEndOf="@id/TextView_Horario__BrechoPage"
        />

    <TextView
        android:id="@+id/Label_End"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Endereço:"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TextView_Horario_BrechoPage" />


    <TextView
        android:id="@+id/TextView_Endereco_BrechoPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Rua das Garças,"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/Label_End"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/TextView_Endereco_Numero_BrechoPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="16dp"
        android:text="254"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/Label_End"
        app:layout_constraintStart_toEndOf="@id/TextView_Endereco_BrechoPage"
        />

    <TextView
        android:id="@+id/Label_Telefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telefone:"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TextView_Endereco_BrechoPage" />

    <TextView
        android:id="@+id/TextView_Telefone_BrechoPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="16dp"
        android:text="(11)978654323"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/Label_Telefone"
        app:layout_constraintStart_toStartOf="parent"

        />

</androidx.constraintlayout.widget.ConstraintLayout>