<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/DeletePerfil"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_delete_trash"
        android:layout_gravity="end"
        />

    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:src="@drawable/ic_person_account"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seu Nome"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"/>

<!--    <TextView-->
<!--        android:id="@+id/email"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="seuemail@example.com"-->
<!--        android:textSize="14sp"-->
<!--        android:layout_gravity="center_horizontal"-->
<!--        android:layout_marginBottom="16dp"/>-->

    <!-- ... Outros elementos do perfil ... -->


    <Button
        android:id="@+id/changeDataBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alterar dados"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/usernameEdit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Nome"
        android:visibility="gone"
        android:inputType="text"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/emailEdit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Email"
        android:visibility="gone"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/changePasswordLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mudar Senha"
        android:visibility="gone"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/currentPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone"
        android:hint="Senha Atual"
        android:inputType="textPassword"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/newPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone"
        android:hint="Nova Senha"
        android:text="TEsTE"
        android:inputType="textPassword"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/saveDataBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salvar"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"/>

</LinearLayout>
</ScrollView>



